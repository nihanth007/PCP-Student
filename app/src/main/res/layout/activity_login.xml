<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mybgr"
    android:orientation="vertical"
    tools:context="tk.nihanth.pcp_student.LoginActivity"
    android:weightSum="1">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="171dp"
        android:src="@drawable/edulogo"
        android:layout_weight="0.6" />
    <EditText
        android:id="@+id/StudentLoginUsername"
        android:inputType="textPersonName"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:background="@drawable/studentloginedittext_background"
        android:textColor="#FFFFFF"
        android:alpha="0.5"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:textColorHint="#FFFFFF"/>

    <EditText
        android:id="@+id/StudentLoginPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:hint="Password"
        android:layout_marginBottom="10dp"
        android:alpha="0.5"
        android:background="@drawable/studentloginedittext_background"
        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF"/>
    <Button
        android:id="@+id/StudentLoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/studentloginbutton_background"
        android:text="Login"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        android:gravity="center"
        android:text="------OR------"

        android:textColor="#FDFDFD" />

    <Button
        android:id="@+id/StudentFaceLoginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/studentloginbutton_background"
        android:text="Face Login"/>
</LinearLayout>
